<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_marginTop="30dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".Home"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:padding="10dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <!-- Text Label -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleTV"
            android:layout_marginTop="10dp"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="#0891d1"/>


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/cityTV"
            android:textSize="15sp"
            android:layout_marginBottom="5dp"
            />

        <!-- Spinner Element -->
        <Spinner
            android:layout_marginTop="10dp"
            android:id="@+id/spinner_city"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#0891d1"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cropTV"
            android:layout_marginTop="10dip"
            android:textSize="15sp"
            android:layout_marginBottom="5dp"
            />

        <!-- Spinner Element -->
        <Spinner
            android:layout_marginTop="10dp"
            android:id="@+id/spinner_crop"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#0891d1"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/soilTV"
            android:layout_marginTop="10dip"
            android:textSize="15sp"
            android:layout_marginBottom="5dp"
            />

        <!-- Spinner Element -->
        <Spinner
            android:layout_marginTop="10dp"
            android:id="@+id/spinner_soil"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#0891d1"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lengthTV"
            android:layout_marginTop="10dip"
            android:textSize="15sp"
            android:layout_marginBottom="5dp"
            />

        <!-- Spinner Element -->
        <Spinner
            android:layout_marginTop="10dp"
            android:id="@+id/spinner_area"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:backgroundTint="#0891d1"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/waterTV"
            android:layout_marginTop="10dip"
            android:textSize="15sp"
            android:layout_marginBottom="5dp"
            />

        <!-- Spinner Element -->
        <Spinner
            android:layout_marginTop="10dp"
            android:id="@+id/spinner_water_level"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#0891d1"
            />



        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/submit"
            android:textSize="15sp"
            android:textColor="#f7fcf7"
            android:background="#0891d1" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:id="@+id/contact"
            android:textColor="#0891d1"
            android:textAlignment="center"/>
    </LinearLayout>
</ScrollView>