<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context="com.farmerfriend.FSecurity_CProd_Pest_Irrigation.Food_Security.Food_Security">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/safe_handling_food"
        android:src="@drawable/safe_food"
        android:layout_gravity="center"
        />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="24dp" />
    
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/fhandlers_dos_and_donts"
        android:src="@drawable/fh_dos_and_donts"
        android:layout_gravity="center"
        />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/consumers_dos_and_donts"
        android:src="@drawable/cons_dos_and_donts"
        android:layout_gravity="center"
        />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="24dp" />
    
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
            android:id="@+id/street_foods"
        android:src="@drawable/street_foods"
        android:layout_gravity="center"
        />
    
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="24dp" />
    
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/food_safety_children"
        android:src="@drawable/food_safety_children"
        android:layout_gravity="center"
        />
    
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="24dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
